<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Seller.EditSellerAcitivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_my_location_24"
            app:tint="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />
            <ImageButton
                android:id="@+id/changeProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_baseline_photo_camera_24"
                android:background="@null"
                android:layout_alignEnd="@+id/profile_image"
                android:layout_alignBottom="@+id/profile_image"
                app:tint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"
            android:hint="Your Name"
            android:textColorHint="@color/Gray"
            android:drawableStart="@drawable/ic_baseline_text_fields_24"
            android:drawablePadding="5dp" />
        <EditText
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"
            android:hint="Shop Name"
            android:textColorHint="@color/Gray"
            android:drawableStart="@drawable/ic_baseline_text_fields_24"
            android:drawablePadding="5dp"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="phone"
            android:hint="Phone"
            android:textColorHint="@color/Gray"
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:drawableTint="@color/Gray"
            android:drawablePadding="5dp" />
        <EditText
            android:id="@+id/deliverFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:hint="Delivery Fee"
            android:textColorHint="@color/Gray"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:drawablePadding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <EditText
                android:id="@+id/country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:inputType="text"
                android:hint="Country"
                android:textColorHint="@color/Gray"
              />
            <EditText
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_shape"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:inputType="text"
                android:hint="State"
                android:textColorHint="@color/Gray"
              />
            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_shape"
                android:padding="10dp"
                android:inputType="text"
                android:hint="City"
                android:textColorHint="@color/Gray" />
        </LinearLayout>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"
            android:hint="Address"
            android:textColorHint="@color/Gray"
            android:drawableStart="@drawable/ic_baseline_add_location_alt_24"
            android:drawablePadding="5dp" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/shopOpenSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop Open"
            android:padding="10dp"/>
        <Button
            android:id="@+id/updateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Update"/>


    </LinearLayout>

</LinearLayout>